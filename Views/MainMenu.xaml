<Page x:Class="Projet_desktop.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainMenu">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Start Game" Width="200" Height="50" Click="StartGame_Click"/>
            <Button Content="Load Game" Width="200" Height="50" Click="LoadGame_Click"/>
            <Button Content="Settings" Width="200" Height="50"/>
            <Button Content="Credits" Width="200" Height="50"/>
            <Button Content="Exit" Width="200" Height="50" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>
